# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
APP_URL=https://mykitchenfarm.com
APP_ENV=production
APP_DEBUG=false

# ----------------------------------------------------------------------------
# JWT SECRET (Change this to a random string)
# ----------------------------------------------------------------------------
# Generate a random string here: https://www.random.org/strings/
JWT_SECRET=change_this_to_random_string_min_32_characters

# ----------------------------------------------------------------------------
# FILE UPLOAD SETTINGS
# ----------------------------------------------------------------------------
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,mp4

# ----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Optional - Configure Later)
# ----------------------------------------------------------------------------
# Hostinger SMTP Settings
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=noreply@mykitchenfarm.com
SMTP_PASS=YOUR_EMAIL_PASSWORD
SMTP_FROM=noreply@mykitchenfarm.com
SMTP_FROM_NAME=TeleCareZone

# ----------------------------------------------------------------------------
# WHATSAPP / SMS CONFIGURATION (Optional - Configure Later)
# ----------------------------------------------------------------------------
# Fast2SMS API Key (Get from https://www.fast2sms.com/)
FAST2SMS_API_KEY=your_fast2sms_api_key_here

# WhatsApp Business API (Alternative)
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_PHONE=+91XXXXXXXXXX

# ----------------------------------------------------------------------------
# GOOGLE MEET INTEGRATION (Optional - Configure Later)
# ----------------------------------------------------------------------------
# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://mykitchenfarm.com/auth/google/callback

# ----------------------------------------------------------------------------
# RAZORPAY PAYMENT GATEWAY (Optional - Configure Later)
# ----------------------------------------------------------------------------
# Get from https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Platform fee percentage (10% default)
PLATFORM_FEE_PERCENT=10

